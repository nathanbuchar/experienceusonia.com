<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">

    {% if title %}
      <title>{{ title }} â€” Goetsch&ndash;Winckler House by Frank Lloyd Wright</title>
    {% else %}
      <title>Goetsch&ndash;Winckler House by Frank Lloyd Wright</title>
    {% endif %}

    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    {# Open Graph stuffs #}
    <meta property="og:title" content="{{ opengraph[0].fields.ogtitle }}">
    <meta property="og:description" content="{{ opengraph[0].fields.ogdescription }}">
    <meta property="og:image" content="{{ opengraph[0].fields.ogimage.fields.file.url }}">
    <meta property="og:url" content="{{ opengraph[0].fields.ogurl }}">
    <meta property="og:type" content="{{ opengraph[0].fields.ogtype }}">

    <link rel="stylesheet" href="/css/styles.css" />

    <script src="https://unpkg.com/lazyload@2.0.0-rc.2/lazyload.js"></script>
    <script defer type="module" src="/js/main.js"></script>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-TFX073R72Y"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
    
      gtag('config', 'G-TFX073R72Y');
    </script>

    {% block extraHead %}{% endblock %}
  </head>
  <body>
    {% set isHomepage = pageKey == 'home' %}
    <div id="content">
      {{ renderModule("header") }}
      <main id="main">
        {% block content %}
          {# Page content goes here. #}
        {% endblock %}
      </main>
      {{ renderModule("footer") }}
    </div>
  </body>
</html>

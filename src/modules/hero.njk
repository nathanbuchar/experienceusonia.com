<div class="hero-module module">
  <div class="hero-module__hero">
    <div class="hero-module__screen"></div>
    <img class="hero-module__image" src="{{ image.fields.file.url }}" alt="" />
    <div class="hero-module__tagline-container" style="mask-image: url({{ mask.fields.file.url }})">
      <div class="hero-module__tagline">
        {% include "partials/tagline.njk" %}
      </div>
    </div>
    <div class="hero-module__content">
      <div class="hero-module__title">
        <h1>Goetsch&ndash;Winckler House</h1>
      </div>
      <div class="hero-module__metadata">
        <p>Frank Lloyd Wright &middot; 1940 &middot; Okemos, MI</p>
      </div>
      <div class="hero-module__links">
        {{ renderModule("links", ctx()) }}
      </div>
    </div>
  </div>
</div>
